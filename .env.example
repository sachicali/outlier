# Server Configuration
NODE_ENV=development
PORT=5000
BASE_URL=http://localhost:5000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# API Rate Limiting
API_RATE_WINDOW=900000
API_RATE_LIMIT=100

# JWT Configuration (IMPORTANT: Generate strong secrets for production)
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))" to generate
JWT_ACCESS_SECRET=your-super-secure-access-token-secret-here-64-chars-minimum
JWT_REFRESH_SECRET=your-super-secure-refresh-token-secret-here-64-chars-minimum
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=outlier-discovery
JWT_AUDIENCE=outlier-api

# Password Hashing
BCRYPT_ROUNDS=12

# Two-Factor Authentication Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
TWO_FACTOR_ENCRYPTION_KEY=your-32-byte-hex-encryption-key-for-2fa-secrets-here
APP_NAME=YouTube Outlier Discovery

# Default Admin User (Change in production!)
DEFAULT_ADMIN_EMAIL=admin@outlier.com
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=Admin123!@#

# API Key Configuration
MAX_API_KEYS_PER_USER=10

# Database Configuration (PostgreSQL recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/outlier_discovery
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=outlier_discovery
# DB_USER=outlier_user
# DB_PASSWORD=secure_password

# Redis Configuration (for session management and caching)
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# YouTube API Configuration
YOUTUBE_API_KEY=your-youtube-api-key-here

# Content Discovery Configuration (Optional - overrides config file)
# CONTENT_SEARCH_QUERIES=["roblox piggy funny moments","brookhaven roleplay family","murder mystery 2 roblox"]
# CONTENT_GAME_PATTERNS=[{"pattern":"doors?","flags":"gi"},{"pattern":"piggy","flags":"gi"}]
# OUTLIER_THRESHOLD=20
# BRAND_FIT_THRESHOLD=6

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Security Headers
ENABLE_HTTPS_ONLY=false
ENABLE_SECURITY_HEADERS=true

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-here
SESSION_MAX_AGE=86400000

# OAuth Configuration
# Google OAuth (get from https://console.developers.google.com/)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (get from https://github.com/settings/applications/new)
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# Email Configuration (for verification emails, password reset, etc.)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@outlier.com

# Email Verification Settings
# ENABLE_EMAIL_VERIFICATION=true
# EMAIL_VERIFICATION_REQUIRED=false

# Two-Factor Authentication Settings
ENABLE_2FA=true
2FA_RATE_LIMIT_ATTEMPTS=5
2FA_RATE_LIMIT_WINDOW=900000
2FA_LOCKOUT_DURATION=900000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Analytics and Monitoring
# SENTRY_DSN=your-sentry-dsn-here
# GOOGLE_ANALYTICS_ID=your-ga-id-here

# Production Security Settings
# HTTPS_REDIRECT=true
# HSTS_MAX_AGE=31536000
# CSP_REPORT_URI=https://your-domain.com/csp-report

# Queue System Configuration
USE_QUEUE_SYSTEM=true
REDIS_URL=redis://localhost:6379

# Queue Worker Configuration
WORKER_CONCURRENCY_YOUTUBE=3
WORKER_CONCURRENCY_BATCH=2
WORKER_CONCURRENCY_EMAIL=5
WORKER_CONCURRENCY_CLEANUP=1
WORKER_CONCURRENCY_SCHEDULED=1

# Scheduled Jobs Configuration
ENABLE_CLEANUP_JOBS=true
ENABLE_CACHE_REFRESH=true
ENABLE_CACHE_CLEANUP=true
ENABLE_EMAIL_DIGEST=false
ENABLE_YOUTUBE_SYNC=true
ENABLE_REPORT_GENERATION=true
ENABLE_DATA_ARCHIVING=false

# Cleanup Job Settings
CLEANUP_ANALYSES_OLDER_THAN_DAYS=90
CLEANUP_FAILED_JOBS_OLDER_THAN_HOURS=24
CLEANUP_BATCH_SIZE=100
CACHE_MAX_AGE_SECONDS=86400
ARCHIVE_DATA_OLDER_THAN_DAYS=365
ARCHIVE_PATH=/tmp/archive

# Job Priority Settings (1-100)
PRIORITY_YOUTUBE_ANALYSIS=75
PRIORITY_BATCH_PROCESSING=50
PRIORITY_EMAIL_NOTIFICATIONS=50
PRIORITY_SCHEDULED_TASKS=25
PRIORITY_CLEANUP_JOBS=10

# Email Configuration for Queue Jobs
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@outlier.com
FRONTEND_URL=http://localhost:3000

# Queue Monitoring
TIMEZONE=UTC
QUEUE_DASHBOARD_REFRESH_INTERVAL=5000