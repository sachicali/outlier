# Test Environment Configuration
NODE_ENV=test
PORT=5001
BASE_URL=http://localhost:5001

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# API Rate Limiting (relaxed for tests)
API_RATE_WINDOW=900000
API_RATE_LIMIT=10000

# JWT Configuration (test secrets)
JWT_ACCESS_SECRET=test-jwt-access-secret-for-testing-purposes-must-be-at-least-32-chars-long
JWT_REFRESH_SECRET=test-jwt-refresh-secret-for-testing-purposes-must-be-at-least-32-chars-long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=outlier-discovery
JWT_AUDIENCE=outlier-api

# Password Hashing (lower rounds for faster tests)
BCRYPT_ROUNDS=8

# Default Admin User
DEFAULT_ADMIN_EMAIL=admin@test.com
DEFAULT_ADMIN_USERNAME=testadmin
DEFAULT_ADMIN_PASSWORD=TestAdmin123!

# API Key Configuration
MAX_API_KEYS_PER_USER=10

# Database Configuration (use in-memory or test DB)
# DATABASE_URL=postgresql://test:test@localhost:5432/outlier_test

# Redis Configuration (use mock or test Redis)
# REDIS_URL=redis://localhost:6380

# YouTube API Configuration (use test key)
YOUTUBE_API_KEY=test-youtube-api-key-for-testing

# Logging Configuration (minimal for tests)
LOG_LEVEL=error
LOG_FILE_PATH=./test-logs

# Security Headers
ENABLE_HTTPS_ONLY=false
ENABLE_SECURITY_HEADERS=false

# Session Configuration
SESSION_SECRET=test-session-secret-for-testing-purposes-must-be-32-chars

# Email Configuration (disabled for tests)
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASS=
# EMAIL_FROM=

# Email Verification Settings (disabled for tests)
ENABLE_EMAIL_VERIFICATION=false
EMAIL_VERIFICATION_REQUIRED=false

# File Upload Configuration
MAX_FILE_SIZE=1048576
UPLOAD_PATH=./test-uploads

# Production Security Settings (disabled for tests)
HTTPS_REDIRECT=false
HSTS_MAX_AGE=0